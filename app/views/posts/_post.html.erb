<div class="post">
  <div class="post__header">
    <p>&nbsp;</p>
  </div>
  <div class="post__photo">
    <%= image_tag item.photo.url(:medium) %>
  </div>
  <div class="post__body">
    <div class="post__description">
      <%= item.description %>
    </div>
    <div class="post__published">
      <%= time_ago_in_words item.created_at %>
    </div>
  </div>
</div>